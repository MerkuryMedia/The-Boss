{
  "name": "the-boss",
  "version": "0.1.0",
  "private": true,
  "description": "Multiplayer prototype for The Boss card game.",
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development tsx watch src/server/index.ts",
    "dev:client": "npm --prefix client run dev",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build:server": "rimraf dist && tsc -p tsconfig.json",
    "build:client": "npm --prefix client run build",
    "build": "npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@fastify/static": "^7.0.2",
    "fastify": "^4.28.1",
    "socket.io": "^4.8.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "playwright": "^1.56.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2"
  }
}
