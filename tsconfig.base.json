{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["src/shared/index"],
      "@shared/*": ["src/shared/*"],
      "@engine": ["src/engine/index"],
      "@engine/*": ["src/engine/*"]
    }
  }
}
